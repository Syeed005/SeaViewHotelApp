<Window x:Class="SeaView.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeaView.Desktop"
        mc:Ignorable="d" FontSize="20" FontFamily="Segoe UI"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Search for Guest" FontSize="28"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0">
            <TextBox x:Name="lastNameText" MinWidth="200"
                     Margin="5"/>
            <Button x:Name="searchForGuest" Margin="5" Padding="5"
                    Click="searchForGuest_Click">
                Search
            </Button>
        </StackPanel>

        <ListBox x:Name="resultsList" Grid.Row="2" Grid.Column="0"
                 Margin="5 20 5 5" ItemsSource="{Binding}" MaxHeight="300"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0">
                            <TextBlock FontWeight="Bold" Margin="5">Reservation:</TextBlock>
                            <TextBlock Text="{Binding FirstName}" Margin="5" />
                            <TextBlock Text="{Binding LastName}" Margin="5" />
                        </StackPanel>

                        <Button Margin="5" Padding="10" Grid.Row="0" Grid.Column="1" 
                                Grid.RowSpan="4" VerticalAlignment="Center"
                                Click="CheckInButton_Click">
                            Proceed..
                        </Button>

                        <StackPanel Orientation="Horizontal" Grid.Row="1">
                            <TextBlock FontWeight="Bold" Margin="5">Room:</TextBlock>
                            <TextBlock Text="{Binding Title}" Margin="5" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="2">
                            <TextBlock FontWeight="Bold" Margin="5">Room Number:</TextBlock>
                            <TextBlock Text="{Binding RoomNumber}" Margin="5" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="3">
                            <TextBlock FontWeight="Bold" Margin="5">Booking Date:</TextBlock>
                            <TextBlock Text="{Binding StartDate}" Margin="5" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="4">
                            <TextBlock FontWeight="Bold" Margin="5">Cost/Night:</TextBlock>
                            <!--<TextBlock Text="{Binding TotalCost, StringFormat='c'}" Margin="5" />-->
                            <TextBlock Text="{Binding TotalCost, ConverterCulture=bn-BD,StringFormat='{}{0:C}'}" Margin="5" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <RadioButton Content="Check-In" Grid.Column="2" HorizontalAlignment="Left" Margin="47,0,0,0" Grid.Row="1" VerticalAlignment="Center" Cursor="Hand" IsChecked="True" Checked="RadioButtonChkIn_Checked" Unchecked="RadioButtonChkIn_Unchecked"/>
        <RadioButton Content="Check-Out" Grid.Column="2" HorizontalAlignment="Left" Margin="190,0,0,0" Grid.Row="1" VerticalAlignment="Center" Cursor="Hand" Checked="RadioButtonChkOut_Checked" Unchecked="RadioButtonChkOut_Unchecked"/>

    </Grid>
</Window>
